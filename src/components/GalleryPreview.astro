---
interface GalleryImage {
  src: string;
  alt: string;
}

interface Props {
  images: GalleryImage[];
}

const { images = [] } = Astro.props satisfies Props;
---
<section class="px-4 pb-20 sm:px-6">
  <div class="mx-auto flex max-w-6xl flex-col gap-8">
    <div class="flex flex-col gap-3 md:flex-row md:items-end md:justify-between">
      <div>
        <p class="text-xs uppercase tracking-[0.35em] text-brand">Gallery</p>
        <h2 class="mt-2 text-3xl font-black uppercase md:text-4xl">Recent native garden glow-ups</h2>
      </div>
      <a href="/gallery" class="inline-flex items-center gap-2 rounded-full border-[3px] border-black bg-white px-5 py-3 text-sm font-bold uppercase tracking-wide transition hover:-translate-y-1 hover:shadow-[6px_6px_0_#111]">
        View gallery
        <i class="ri-arrow-right-up-line"></i>
      </a>
    </div>
    <div class="grid gap-4 md:grid-cols-[1.2fr_0.8fr]">
      {images.slice(0, 3).map((image, index) => (
        <figure class={`relative overflow-hidden rounded-3xl border-[3px] border-black bg-white shadow-[10px_10px_0_#111] ${index === 0 ? "md:row-span-2" : ""}`}>
          <img src={image.src} alt={image.alt} class="h-full w-full object-cover" loading={index === 0 ? "eager" : "lazy"} />
        </figure>
      ))}
    </div>
  </div>
</section>
