---
interface TrustPoint {
  label: string;
  supportingText: string;
}

interface Props {
  title?: string;
  items: TrustPoint[];
}

const {
  title = "Trusted by design-forward homeowners and boutique venues",
  items = [],
} = Astro.props satisfies Props;
---
<section class="px-4 pb-16 sm:px-6">
  <div class="mx-auto max-w-6xl rounded-3xl border-[3px] border-black bg-white px-6 py-10 shadow-[10px_10px_0_#111]">
    <div class="flex flex-col gap-8 md:flex-row md:items-center md:justify-between">
      <div class="max-w-md">
        <p class="text-xs uppercase tracking-[0.35em] text-brand">Proof</p>
        <h2 class="mt-2 text-2xl font-black uppercase md:text-3xl">{title}</h2>
      </div>
      <div class="grid flex-1 gap-6 sm:grid-cols-3">
        {items.map((item) => (
          <div class="rounded-2xl border-2 border-dashed border-black/40 bg-paper p-5 text-center">
            <p class="text-3xl font-black uppercase text-[#ff8a8a]">{item.label}</p>
            <p class="mt-2 text-sm font-semibold uppercase tracking-wide text-neutral-600">{item.supportingText}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
