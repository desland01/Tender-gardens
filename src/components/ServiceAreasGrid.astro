---
interface LocationItem {
  city: string;
  slug: string;
  county?: string;
  blurb?: string;
}

interface Props {
  locations: LocationItem[];
}

const { locations = [] } = Astro.props satisfies Props;
---
<section class="px-4 pb-20 sm:px-6">
  <div class="mx-auto max-w-6xl rounded-3xl border-[3px] border-black bg-paper p-8 shadow-[10px_10px_0_#111]">
    <div class="flex flex-col gap-6 md:flex-row md:items-start md:justify-between">
      <div class="max-w-md space-y-3">
        <p class="text-xs uppercase tracking-[0.35em] text-brand">Service areas</p>
        <h2 class="text-3xl font-black uppercase md:text-4xl">We tend to backyards across Central Florida</h2>
        <p class="text-sm text-neutral-600">
          From historic bungalows in Winter Park to lakeside patio retreats in Sanford, the Tender Gardens crew brings curated planting plans and reliable maintenance visits.
        </p>
      </div>
      <div class="grid flex-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {locations.slice(0, 6).map((location) => (
          <a
            href={`/service-areas/${location.slug}/`}
            class="group flex flex-col gap-2 rounded-2xl border-2 border-black bg-white p-5 text-left transition hover:-translate-y-1 hover:bg-[#fffae5] hover:shadow-[6px_6px_0_#111]"
          >
            <span class="text-xs font-semibold uppercase tracking-[0.25em] text-neutral-500">{location.county ?? "Metro"}</span>
            <span class="text-xl font-black uppercase text-[#111]">{location.city}</span>
            {location.blurb && <p class="text-sm text-neutral-600">{location.blurb}</p>}
            <span class="mt-3 text-xs font-semibold uppercase tracking-wide text-brand">View services</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>
